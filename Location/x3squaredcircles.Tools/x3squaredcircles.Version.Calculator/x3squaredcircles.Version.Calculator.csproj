<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>version-detective</AssemblyName>
    <RootNamespace>x3squaredcircles.Version.Calculator</RootNamespace>

    <!-- .NET Tool Configuration -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>version-detective</ToolCommandName>

    <!-- Package Metadata -->
    <PackageId>x3squaredcircles.Version.Calculator</PackageId>
    <Version>1.0.0</Version>
    <Authors>3xSquaredCircles</Authors>
    <Company>3xSquaredCircles</Company>
    <Description>Automated versioning tool for .NET solutions with database schema dependencies. Provides dual versioning strategies (semantic and marketing) while ensuring database schema changes drive major version increments.</Description>
    <PackageTags>versioning;semantic-version;git;database;schema;automation;pipeline;devops</PackageTags>
    <PackageProjectUrl>https://github.com/3xSquaredCircles/version-detective</PackageProjectUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

    <!-- Build Properties -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <NoWarn>CS8618</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Command line parsing -->
    <PackageReference Include="CommandLineParser" Version="2.9.1" />

    <!-- Logging -->
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
  </ItemGroup>

</Project>