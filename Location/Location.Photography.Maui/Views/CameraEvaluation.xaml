<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Photography.Maui.Views.CameraEvaluation"
             Title="Camera Setup"
             BackgroundColor="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Instructions Header -->
        <Frame Grid.Row="0" 
               Margin="20,40,20,10" 
               Padding="20"
               CornerRadius="10">
            <StackLayout>
                <Label Text="Camera Calibration" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />

                <Label x:Name="InstructionLabel"
                       Text="Take a photo of anything to calibrate your phone camera for FOV preview, and specific equipment recommendations."
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0" />

                <Label x:Name="StatusLabel"
                       Text=""
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       Margin="0,5,0,0"
                       IsVisible="False" />
            </StackLayout>
        </Frame>

        <!-- Image Preview Area -->
        <Grid Grid.Row="1" Margin="20,10">
            <!-- Captured Image Display -->
            <Image x:Name="CapturedImage" 
                   Aspect="AspectFill"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand"
                   IsVisible="False" />

            <!-- Placeholder when no image -->
            <StackLayout x:Name="PlaceholderStack"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        IsVisible="True">
                <Label Text="Ready for calibration photo"
                       FontSize="18"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0" />
                <Label Text="Tap 'Take Calibration Photo' below"
                       FontSize="14"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Grid>

        <!-- Controls -->
        <StackLayout Grid.Row="2" 
                     Orientation="Vertical"
                     Margin="20,10,20,40"
                     Spacing="15">

            <!-- Capture Button -->
            <Button x:Name="CaptureButton"
                    Text="Take Calibration Photo"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="60"
                    CornerRadius="30"
                    Clicked="OnCaptureButtonClicked" />

            <!-- Progress Indicator -->
            <StackLayout x:Name="ProcessingStack"
                        Orientation="Horizontal"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Spacing="10">
                <ActivityIndicator x:Name="ProcessingIndicator"
                                  IsRunning="False"
                                  
                                  WidthRequest="30"
                                  HeightRequest="30" />
                <Label x:Name="ProcessingLabel"
                       Text="Processing image..."
                      
                       FontSize="16"
                       VerticalOptions="Center" />
            </StackLayout>

            <!-- Skip Button -->
            <Button x:Name="SkipButton"
                    Text="Skip Calibration"
                    FontSize="14"
                    BorderWidth="1"
                    HeightRequest="45"
                    CornerRadius="22"
                    Clicked="OnSkipButtonClicked" />

            <!-- Help Text -->
           
        </StackLayout>

        <!-- Success Overlay -->
        <Grid x:Name="SuccessOverlay"
              Grid.RowSpan="3"
              IsVisible="False">
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Margin="40"
                   Padding="30"
                   VerticalOptions="Center">
                <StackLayout Spacing="20">
                    <Label Text="✅"
                           FontSize="60"
                           HorizontalOptions="Center" />

                    <Label Text="Calibration Successful!"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           />

                    <Label x:Name="CalibrationResultLabel"
                           Text=""
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                            />

                    <Button Text="Continue"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnContinueButtonClicked" />
                </StackLayout>
            </Frame>
        </Grid>

        <!-- Error Overlay -->
        <Grid x:Name="ErrorOverlay"
              Grid.RowSpan="3"
              BackgroundColor="#CC000000"
              IsVisible="False">
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Margin="40"
                   Padding="30"
                   VerticalOptions="Center">
                <StackLayout Spacing="20">
                    <Label Text="⚠️"
                           FontSize="60"
                           HorizontalOptions="Center" />

                    <Label Text="Calibration Failed"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Red" />

                    <Label x:Name="ErrorMessageLabel"
                           Text=""
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="Black" />

                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Button Text="Try Again"
                                BackgroundColor="#007ACC"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand"
                                Clicked="OnRetryButtonClicked" />

                        <Button Text="Skip"
                                BackgroundColor="Gray"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand"
                                Clicked="OnSkipButtonClicked" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>