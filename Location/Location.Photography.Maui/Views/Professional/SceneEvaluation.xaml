<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Location.Photography.Maui.Controls"
             xmlns:viewmodels="clr-namespace:Location.Photography.ViewModels;assembly=Location.Photography.ViewModels"
             x:Class="Location.Photography.Maui.Views.Professional.SceneEvaluation"
             x:DataType="viewmodels:SceneEvaluationViewModel"
             IconImageSource="mountain.png">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Margin" Value="5" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView VerticalOptions="FillAndExpand">
        <Grid Margin="5" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Histogram Analysis" FontSize="14" FontAttributes="Bold" Grid.Row="0" Grid.ColumnSpan="4" HorizontalOptions="Center" Margin="5"/>

            <!-- Histograms -->
            <Image Source="{Binding RedHistogramImage}" IsVisible="{Binding IsRedHistogramVisible}" Grid.Row="1" Grid.ColumnSpan="4" Margin="5" />
            <Image Source="{Binding BlueHistogramImage}" IsVisible="{Binding IsBlueHistogramVisible}" Grid.Row="1" Grid.ColumnSpan="4" Margin="5"/>
            <Image Source="{Binding GreenHistogramImage}" IsVisible="{Binding IsGreenHistogramVisible}" Grid.Row="1" Grid.ColumnSpan="4" Margin="5"/>
            <Image Source="{Binding ContrastHistogramImage}" IsVisible="{Binding IsContrastHistogramVisible}" Grid.Row="1" Grid.ColumnSpan="4" Margin="5"/>

            <!-- Radio Buttons for selecting histograms -->
            <RadioButton Content="Red" GroupName="chart" Value="R" 
             Grid.Row="2" Grid.Column="0" x:Name="RedRadioButton" 
             CheckedChanged="RadioButton_CheckedChanged"
             Style="{StaticResource RadioButtonStyle}"/>

            <RadioButton Content="Blue" x:Name="BlueRadioButton" GroupName="chart" Value="B" 
             Grid.Row="2" Grid.Column="1" 
             CheckedChanged="RadioButton_CheckedChanged"
             Style="{StaticResource RadioButtonStyle}"/>

            <RadioButton Content="Green" GroupName="chart" Value="G" 
             Grid.Row="2" Grid.Column="2" x:Name="GreenRadioButton" 
             CheckedChanged="RadioButton_CheckedChanged"
             Style="{StaticResource RadioButtonStyle}"/>

            <RadioButton Content="Contrast" x:Name="ContrastRadioButton" GroupName="chart" Value="C" 
             Grid.Row="2" Grid.Column="3" 
             CheckedChanged="RadioButton_CheckedChanged"
             Style="{StaticResource RadioButtonStyle}"/>

            <!-- Color Temperature and Tint Dials -->
            <controls:ColorTemperatureDial 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2"
                   Value="{Binding ColorTemperature}"
                   MinValue="2700"
                   MaxValue="9000"
                   Title="Color Temperature"
                   Margin="10"
                   HeightRequest="180"
                   WidthRequest="180"
                   HorizontalOptions="Center"/>

            <controls:TintDial 
                   Grid.Row="3" 
                   Grid.Column="2" 
                   Grid.ColumnSpan="2"
                   Value="{Binding TintValue}"
                   MinValue="-1"
                   MaxValue="1"
                   Title="White Balance Tint"
                   Margin="10"
                   HeightRequest="180"
                   WidthRequest="180"
                   HorizontalOptions="Center"/>

            <!-- Evaluate Scene Button -->
            <Button Text="Evaluate Scene" 
                       Command="{Binding EvaluateSceneCommand}" 
                       Grid.Row="4" 
                       Grid.ColumnSpan="4"
                       Padding="5"
                       CornerRadius="10"
                       MinimumHeightRequest="50"
                       FontSize="14" 
                       Margin="5"
                       IsEnabled="{Binding IsProcessing, Converter={StaticResource InvertedBoolConverter}}"/>

            <!-- Error message display -->
            <Grid IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                     BackgroundColor="#30FF0000"
                     VerticalOptions="End"
                     Padding="10"
                     Margin="5"
                     Grid.Row="5"
                     Grid.ColumnSpan="4">
                <Label Text="{Binding ErrorMessage}"
                          TextColor="#FF0000"
                          FontSize="14"
                          Margin="5" />
            </Grid>

            <!-- Processing indicator 
            <ActivityIndicator IsRunning="{Binding IsProcessing}" 
                                  IsVisible="{Binding IsProcessing}" 
                                  VerticalOptions="Center" 
                                  HorizontalOptions="Center" 
                                  Grid.RowSpan="6" 
                                  Grid.ColumnSpan="4"
                                  HeightRequest="50"
                                  WidthRequest="50"
                                  Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}"
                                  Margin="5"/>-->

            <!-- Busy indicator overlay -->
            <Grid IsVisible="{Binding IsBusy}" 
                     
                     Grid.RowSpan="6"
                     Grid.ColumnSpan="4"
                     Padding="10"
                     Margin="5">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                          HeightRequest="50" 
                                          WidthRequest="50" 
                                          Color="Blue" />
                    <Label Text="Processing image, please wait..." 
                              FontSize="14"
                              Margin="5"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>