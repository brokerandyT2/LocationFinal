<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Location.Photography.Maui.Views.Premium.CameraLensManagement"
            Title="Camera Lens Management"
            BackgroundColor="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" 
              BackgroundColor="#80000000" 
              Margin="20,40,20,10" 
              Padding="20"
              CornerRadius="10">
            <Label Text="Camera Lens Management" 
                  FontSize="22" 
                  FontAttributes="Bold"
                  TextColor="White"
                  HorizontalOptions="Center" />
        </Frame>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Camera Bodies Column -->
            <StackLayout Grid.Column="0" Spacing="10" Margin="0,0,10,0">
                <Label Text="CAMERA BODIES" 
                      FontSize="18" 
                      FontAttributes="Bold"
                      TextColor="White"
                      HorizontalOptions="Center" />

                <Frame BackgroundColor="#40FFFFFF" 
                      CornerRadius="5" 
                      Padding="0"
                      HeightRequest="400">
                    <ScrollView>
                        <CollectionView x:Name="CamerasCollectionView"
                                     ItemsSource="{Binding AvailableCameras}"
                                     SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15,10">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <RadioButton Grid.Row="0"
                                                  Grid.Column="0"
                                                  Grid.RowSpan="2"
                                                  IsChecked="{Binding IsSelected}"
                                                  GroupName="CameraSelection"
                                                  CheckedChanged="OnCameraSelectionChanged"
                                                  VerticalOptions="Center" />

                                        <Label Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding Camera.Name}"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            Margin="10,0,0,0" />

                                        <Label Grid.Row="1"
                                            Grid.Column="1"
                                            Text="{Binding Camera.SensorType}"
                                            TextColor="LightGray"
                                            FontSize="12"
                                            Margin="10,0,0,0" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Frame>

                <Button x:Name="AddCameraButton"
                       Text="Add New Camera"
                       FontSize="16"
                       BackgroundColor="#28a745"
                       TextColor="White"
                       HeightRequest="50"
                       CornerRadius="25"
                       Clicked="OnAddCameraClicked" />
            </StackLayout>

            <!-- Lenses Column -->
            <StackLayout Grid.Column="1" Spacing="10" Margin="10,0,0,0">
                <Label Text="LENSES" 
                      FontSize="18" 
                      FontAttributes="Bold"
                      TextColor="White"
                      HorizontalOptions="Center" />

                <Frame BackgroundColor="#40FFFFFF" 
                      CornerRadius="5" 
                      Padding="0"
                      HeightRequest="400">
                    <ScrollView>
                        <CollectionView x:Name="LensesCollectionView"
                                     ItemsSource="{Binding AvailableLenses}"
                                     SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="15,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0"
                                               IsChecked="{Binding IsSelected}"
                                               Color="White"
                                               CheckedChanged="OnLensSelectionChanged"
                                               VerticalOptions="Center" />

                                        <Label Grid.Column="1"
                                            Text="{Binding Lens.DisplayName}"
                                            TextColor="White"
                                            VerticalOptions="Center"
                                            FontSize="16"
                                            Margin="10,0,0,0" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Frame>

                <Button x:Name="AddLensButton"
                       Text="Add New Lens"
                       FontSize="16"
                       BackgroundColor="#28a745"
                       TextColor="White"
                       HeightRequest="50"
                       CornerRadius="25"
                       Clicked="OnAddLensClicked" />

                <Label Text="Select a camera to see its lens associations. Check boxes to assign lenses."
                      TextColor="LightGray"
                      FontSize="12"
                      HorizontalTextAlignment="Center"
                      Margin="0,10,0,0" />
            </StackLayout>
        </Grid>

        <!-- Action Buttons -->
        <Frame Grid.Row="2" 
              BackgroundColor="#80000000" 
              Margin="20,10,20,40" 
              Padding="20"
              CornerRadius="10">
            <Button Text="Close"
                   FontSize="16"
                   BackgroundColor="#666666"
                   TextColor="White"
                   HeightRequest="50"
                   CornerRadius="25"
                   HorizontalOptions="Center"
                   WidthRequest="200"
                   Clicked="OnCloseClicked" />
        </Frame>

        <!-- Processing Overlay -->
        <Grid x:Name="ProcessingOverlay"
             Grid.RowSpan="3"
             BackgroundColor="#CC000000"
             IsVisible="False">
            <StackLayout VerticalOptions="Center" 
                      HorizontalOptions="Center"
                      Spacing="15">
                <ActivityIndicator IsRunning="True" 
                                Color="White" 
                                HeightRequest="50" 
                                WidthRequest="50"/>
                <Label Text="Loading..." 
                     TextColor="White" 
                     FontSize="16"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>