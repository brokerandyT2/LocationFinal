<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Location.Photography.Maui.Views.Premium.LightMeter"
             xmlns:viewmodels="clr-namespace:Location.Photography.ViewModels;assembly=Location.Photography.ViewModels"
             xmlns:strings="clr-namespace:Location.Photography.Maui.Resources"
             x:DataType="viewmodels:LightMeterViewModel"
             
             IconImageSource="camerameter.png"
             BackgroundColor="Black">

    <Grid Padding="20" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Close Button Row -->
       
        <!-- Large EV Display -->
        <Grid Grid.Row="1" Margin="0,20,0,30">
            <Border BackgroundColor="#1a1a1a" 
                    StrokeThickness="2" 
                    Stroke="#333333"
                    StrokeShape="RoundRectangle 15">
                <StackLayout Padding="20" HorizontalOptions="Center">
                    <Label Text="{Binding CalculatedEV, StringFormat='{0:F1}'}" 
                           FontSize="48" 
                           FontAttributes="Bold"
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="EV" 
                           FontSize="16" 
                           TextColor="#CCCCCC" 
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Border>
        </Grid>

        <!-- Sliders Section -->
        <ScrollView Grid.Row="2" VerticalOptions="Fill">
            <StackLayout Spacing="25" Padding="10">

                <!-- Aperture Slider -->
                <StackLayout>
                    <Label Text="APERTURE" 
                           FontSize="12" 
                           TextColor="#CCCCCC" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Text="{Binding MinAperture}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>

                        <Slider Grid.Column="1" 
                                x:Name="ApertureSlider"
                                Minimum="0" 
                                Maximum="{Binding MaxApertureIndex}"
                                Value="{Binding SelectedApertureIndex, Mode=TwoWay}"
                                ThumbColor="White"
                                MinimumTrackColor="White"
                                MaximumTrackColor="#444444"
                                ValueChanged="OnApertureChanged"/>

                        <Label Grid.Column="2" 
                               Text="{Binding MaxAperture}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="{Binding SelectedAperture}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Margin="0,10,0,0"/>
                </StackLayout>

                <!-- ISO Slider -->
                <StackLayout>
                    <Label Text="ISO" 
                           FontSize="12" 
                           TextColor="#CCCCCC" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Text="{Binding MinIso}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>

                        <Slider Grid.Column="1" 
                                x:Name="IsoSlider"
                                Minimum="0" 
                                Maximum="{Binding MaxIsoIndex}"
                                Value="{Binding SelectedIsoIndex, Mode=TwoWay}"
                                ThumbColor="White"
                                MinimumTrackColor="White"
                                MaximumTrackColor="#444444"
                                ValueChanged="OnIsoChanged"/>

                        <Label Grid.Column="2" 
                               Text="{Binding MaxIso}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="{Binding SelectedIso}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Margin="0,10,0,0"/>
                </StackLayout>

                <!-- Shutter Speed Slider -->
                <StackLayout>
                    <Label Text="SHUTTER SPEED" 
                           FontSize="12" 
                           TextColor="#CCCCCC" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Text="{Binding MinShutterSpeed}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>

                        <Slider Grid.Column="1" 
                                x:Name="ShutterSpeedSlider"
                                Minimum="0" 
                                Maximum="{Binding MaxShutterSpeedIndex}"
                                Value="{Binding SelectedShutterSpeedIndex, Mode=TwoWay}"
                                ThumbColor="White"
                                MinimumTrackColor="White"
                                MaximumTrackColor="#444444"
                                ValueChanged="OnShutterSpeedChanged"/>

                        <Label Grid.Column="2" 
                               Text="{Binding MaxShutterSpeed}" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="{Binding SelectedShutterSpeed}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Margin="0,10,0,0"/>
                </StackLayout>

                <!-- EV Slider -->
                <StackLayout>
                    <Label Text="EV" 
                           FontSize="12" 
                           TextColor="#CCCCCC" 
                           HorizontalOptions="Center" 
                           Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Text="-7" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>

                        <Slider Grid.Column="1" 
                                x:Name="EvSlider"
                                Minimum="-7" 
                                Maximum="7"
                                Value="{Binding SelectedEV, Mode=TwoWay}"
                                ThumbColor="White"
                                MinimumTrackColor="White"
                                MaximumTrackColor="#444444"
                                ValueChanged="OnEvChanged"/>

                        <Label Grid.Column="2" 
                               Text="7" 
                               FontSize="10" 
                               TextColor="#888888" 
                               VerticalOptions="Center"/>
                    </Grid>
                    <Label Text="{Binding SelectedEV, StringFormat='{0:F1}'}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           Margin="0,10,0,0"/>
                </StackLayout>

            </StackLayout>
        </ScrollView>

        <!-- Step Selection Radio Buttons -->
        <StackLayout Grid.Row="3" Orientation="Horizontal" HorizontalOptions="Center" Spacing="30" Margin="0,20,0,0">
            <Label Text="Steps:" 
                   FontSize="14" 
                   TextColor="#CCCCCC" 
                   VerticalOptions="Center"/>

            <StackLayout Orientation="Horizontal" Spacing="20">
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <RadioButton x:Name="FullStepRadio" 
                                 IsChecked="{Binding IsFullStep}"
                                 CheckedChanged="OnStepChanged"
                                 BackgroundColor="Transparent"/>
                    <Label Text="1/1" 
                           FontSize="12" 
                           TextColor="White" 
                           VerticalOptions="Center"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <RadioButton x:Name="HalfStepRadio" 
                                 IsChecked="{Binding IsHalfStep}"
                                 CheckedChanged="OnStepChanged"
                                 BackgroundColor="Transparent"/>
                    <Label Text="1/2" 
                           FontSize="12" 
                           TextColor="White" 
                           VerticalOptions="Center"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <RadioButton x:Name="ThirdStepRadio" 
                                 IsChecked="{Binding IsThirdStep}"
                                 CheckedChanged="OnStepChanged"
                                 BackgroundColor="Transparent"/>
                    <Label Text="1/3" 
                           FontSize="12" 
                           TextColor="White" 
                           VerticalOptions="Center"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>

        <!-- Measure Button -->
        <Button Grid.Row="4" 
                Text="MEASURE" 
                FontSize="16" 
                FontAttributes="Bold"
                BackgroundColor="#333333"
                TextColor="White"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,10"
                Pressed="OnMeasurePressed"/>

        <!-- Busy indicator overlay -->
        <Grid Grid.RowSpan="5" 
              IsVisible="{Binding IsBusy}" 
              BackgroundColor="#80000000">
            <VerticalStackLayout VerticalOptions="Center" 
                                 HorizontalOptions="Center" 
                                 Spacing="10">
                <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                   HeightRequest="50" 
                                   WidthRequest="50" 
                                   Color="White" />
                <Label Text="Loading..." 
                       TextColor="White" 
                       FontSize="14"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Error message display -->
        <Grid Grid.RowSpan="5" 
              IsVisible="{Binding IsError}"
              BackgroundColor="#80FF0000"
              VerticalOptions="End">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="White"
                   FontSize="14"
                   Padding="20" 
                   HorizontalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>