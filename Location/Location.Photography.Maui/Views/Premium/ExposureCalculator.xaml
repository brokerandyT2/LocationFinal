<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:Location.Photography.Maui.Resources"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:viewmodels="clr-namespace:Location.Photography.ViewModels;assembly=Location.Photography.ViewModels"
             xmlns:converters="clr-namespace:Location.Core.Converters;assembly=Location.Core.Converters"
             Title="Exposure Calculator"
             x:Class="Location.Photography.Maui.Views.Premium.ExposureCalculator">


    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StringToBoolConverter x:Key="StringToBoolConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Padding="10" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header and close button -->
            <Label Text="Exposure Calculator" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="3"
                   Margin="5"/>

            <ImageButton Grid.Row="0" 
                         Grid.Column="3" 
                         Source="closeoutlinecustom.png" 
                         HorizontalOptions="End" 
                         x:Name="CloseButton" 
                         Pressed="CloseButton_Pressed"
                         Padding="5"
                         CornerRadius="10"
                         Margin="5"
                         IsVisible="False"/>

            <!-- Exposure Increments -->
            <Label Text="{x:Static strings:AppResources.exposureincrements}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="1" 
                   Grid.ColumnSpan="4"
                   Margin="5"/>

            <RadioButton x:Name="exposurefull" 
                         Content="{x:Static strings:AppResources.full}" 
                         GroupName="Exposure" 
                         Value="0" 
                         Grid.Row="2" 
                         Grid.Column="0" 
                         CheckedChanged="exposuresteps_CheckedChanged"
                         IsChecked="True"
                         Margin="5"/>

            <RadioButton x:Name="exposurehalfstop" 
                         Content="{x:Static strings:AppResources.half}" 
                         GroupName="Exposure" 
                         Value="1" 
                         Grid.Row="2" 
                         Grid.Column="1" 
                         CheckedChanged="exposuresteps_CheckedChanged"
                         Margin="5"/>

            <RadioButton x:Name="exposurethirdstop" 
                         Content="{x:Static strings:AppResources.thirds}" 
                         GroupName="Exposure" 
                         Value="2" 
                         Grid.Row="2" 
                         Grid.Column="2" 
                         CheckedChanged="exposuresteps_CheckedChanged"
                         Margin="5"/>

            <!-- Calculate
            <Label Text="{x:Static strings:AppResources.calculate}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="3" 
                   Grid.ColumnSpan="4"
                   Margin="5"/>

            <RadioButton x:Name="shutter" 
                         Content="{x:Static strings:AppResources.shutterspeednocolon}" 
                         GroupName="Calculate" 
                         Value="0" 
                         Grid.Row="4" 
                         Grid.Column="0" 
                         CheckedChanged="calculate_CheckedChanged"
                         IsChecked="True"
                         Margin="5"/>

            <RadioButton x:Name="aperture" 
                         Content="{x:Static strings:AppResources.aperturenocolon}" 
                         GroupName="Calculate" 
                         Value="3" 
                         Grid.Row="4" 
                         Grid.Column="1" 
                         CheckedChanged="calculate_CheckedChanged"
                         Margin="5"/>

            <RadioButton x:Name="iso" 
                         Content="{x:Static strings:AppResources.isonocolon}" 
                         GroupName="Calculate" 
                         Value="1" 
                         Grid.Row="4" 
                         Grid.Column="2" 
                         CheckedChanged="calculate_CheckedChanged"
                         Margin="5"/> -->

            <!-- EV Setting -->
            <Label Text="EV (Exposure Value)" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="5" 
                   Grid.ColumnSpan="4"
                   Margin="5"/>

            <Slider x:Name="EvSlider" 
                    Minimum="-5" 
                    Maximum="5" 
                    Value="0"
                    Grid.Row="6" 
                    Grid.ColumnSpan="4"
                    Margin="15,5,15,5"
                    ValueChanged="EvSlider_ValueChanged"/>

            <Label Text="{Binding Source={x:Reference EvSlider}, Path=Value, StringFormat='{0:F0}'}" 
                   HorizontalOptions="Center" 
                   Grid.Row="6" 
                   Grid.ColumnSpan="4" 
                   VerticalOptions="End"
                   Margin="5" />

            <!-- Base Exposure -->
            <Label Text="{x:Static strings:AppResources.baseexposure}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="7" 
                   Grid.ColumnSpan="4"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.shutterspeed}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="8" 
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.fStop}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="8" 
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.iso}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="8" 
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Picker x:Name="ShutterSpeed_Picker" 
                    Grid.Row="9" 
                    Grid.Column="0" 
                    ItemsSource="{Binding ShutterSpeedsForPicker}" 
                    SelectedItem="{Binding ShutterSpeedSelected}"
                    SelectedIndexChanged="ShutterSpeed_Picker_SelectedIndexChanged"
                    FontSize="14"
                    Margin="5"/>

            <Picker x:Name="fstop_Picker" 
                    Grid.Row="9" 
                    Grid.Column="1" 
                    ItemsSource="{Binding ApeaturesForPicker}" 
                    SelectedItem="{Binding FStopSelected}"
                    SelectedIndexChanged="fstop_Picker_SelectedIndexChanged"
                    FontSize="14"
                    Margin="5"/>

            <Picker x:Name="ISO_Picker" 
                    Grid.Row="9" 
                    Grid.Column="2" 
                    ItemsSource="{Binding ISOsForPicker}" 
                    SelectedItem="{Binding ISOSelected}"
                    SelectedIndexChanged="ISO_Picker_SelectedIndexChanged"
                    FontSize="14"
                    Margin="5"/>

            <!-- Results -->
            <Label Text="{x:Static strings:AppResources.results}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="10" 
                   Grid.ColumnSpan="4"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.shutterspeed}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="11" 
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.fStop}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="11" 
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Label Text="{x:Static strings:AppResources.iso}" 
                   TextColor="{StaticResource Primary}" 
                   FontSize="14" 
                   FontAttributes="Bold" 
                   Grid.Row="11" 
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   Margin="5"/>

            <Label Text="{Binding ShutterSpeedResult}" 
                   x:Name="shutterspeedresult" 
                   Grid.Row="12" 
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   FontSize="14"
                   Margin="5"/>

            <Label Text="{Binding FStopResult}" 
                   x:Name="fstopresult" 
                   Grid.Row="12" 
                   Grid.Column="1"
                   HorizontalOptions="Center"
                   FontSize="14"
                   Margin="5"/>

            <Label Text="{Binding ISOResult}" 
                   x:Name="isoresult" 
                   Grid.Row="12" 
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   FontSize="14"
                   Margin="5"/>

            <!-- Error message -->
            <Grid IsVisible="{Binding ShowError}" 
                  Grid.Row="13" 
                  Grid.ColumnSpan="4" 
                  BackgroundColor="{StaticResource TransparentErrorBrush}" 
                  Padding="10" 
                  Margin="5">
                <Label x:Name="errorLabel" 
                       Text="{Binding ErrorMessage}" 
                       TextColor="{StaticResource ErrorRed}"
                       FontSize="14"
                       Margin="5"/>
            </Grid>

            <!-- Busy indicator overlay -->
            <Grid IsVisible="{Binding VmIsBusy}" 
                  BackgroundColor="{StaticResource TransparentOverlayBrush}"
                  Grid.RowSpan="14"
                  Grid.ColumnSpan="4"
                  Padding="10"
                  Margin="5">
                <VerticalStackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center"
                                     Spacing="10">
                    <ActivityIndicator IsRunning="{Binding VmIsBusy}" 
                                       HeightRequest="50" 
                                       WidthRequest="50" 
                                       Color="Blue" />
                    <Label Text="Processing, please wait..." 
                           TextColor="White" 
                           FontSize="14"
                           Margin="5"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>